@import "/wxParse/wxParse.wxss";

.content {
    display: flex;
    flex-direction: column;
    padding: 40rpx 20rpx 40rpx 20rpx;
}
.title {
    font-weight: bold;
    font-size: 46rpx;
}
.author {
    display: flex;
    margin: 14rpx 0rpx;
    flex-direction: row;
    align-items: center;
}
.author .image{
    width: 35rpx;
    height: 35rpx;
}
.author .name {
    color: #8c8c8c;
    margin-left: 15rpx;
}
.author .location {
    color: #096dd9;
    margin-left: 20rpx;
}
.footer {
    display: flex;
    margin: 40rpx 0rpx;
    font-size: 20rpx;
    flex-direction: row;
    align-items: center;
}
.footer .like{
    margin-left: 15px;
}
.share {
    position: fixed;
    width: 100rpx;
    height: 100rpx;
    background-color: white;
    border-shadow: 0 0 20rpx gray;
    border-radius: 100rpx;
    z-index: 1;
    border:1px solid #f5f5f5;
    bottom: 50rpx;
    right: 25rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.share .btn {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: red;
    opacity: 0;
}

.share .image {
    width: 48rpx;
    height: 48rpx;
}