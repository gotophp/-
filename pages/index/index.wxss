/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
}
.search-input {
  height: 60rpx !important;
  margin: 15rpx 0rpx;
}
.tab-content {
  flex: 1;
  height: calc(100% - 100rpx) !important;
  border-top: 1rpx solid #f5f5f5;
  margin-bottom: 15rpx;
}
scroll-view ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
.tabs-line {
  width: 20%!important;
}
.tab-docs-list {
  height: 100%;
}
.section-content {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin-top: 15rpx;
}
.detail-card {
  width: 690rpx!important;
}
