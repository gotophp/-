.container {
    display: flex;
    flex-direction: column;
}
.search-bar {
    background-color: red;
}
.search-input {
    height: 60rpx !important;
    margin: 15rpx 0rpx;
}
.search-bottom  {
    border-top: 1rpx solid #f5f5f5;
}
.list {
    display: flex;
    flex-direction: column;
    flex: 1;
}
.list .list-item {
    /*display: flex;*/
    /*flex-direction: column;*/
    border-bottom: 2rpx solid #f5f5f5;
    padding: 30rpx 30rpx;
}
.list .list-item  .title {
    font-weight: bold;
    font-size: 36rpx;
    height: 100pxh
}
.list .list-item  .desc {
    font-size: 28rpx;
    font-weight: 200;
}
.list .list-item .info {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 15rpx;
}
.info .image {
    width: 30rpx;
    height: 30rpx;
}
.info text {
    margin-left: 15rpx;
    font-weight: 100;
    font-size: 20rpx;

}
.number {
    font-size: 22rpx;
    padding-left: 15rpx;
    padding-top: 10rpx;
    font-weight: 100;
}
.em-class {
    color: red;
}