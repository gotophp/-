.section {
    width: 100%;
    height: 100%;
    min-height: 100vh;
    background: #fff;
    border-radius: 8rpx 8rpx 0 0;
    padding-bottom: 100rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}
.title {
    height: 100rpx;
    position: fixed;
    background-color: #f7f7f7;
    z-index: 1;
    padding-top: 20rpx;
    border-bottom: 1rpx solid #f5f5f5;

}
.content {
    flex: 1;
    margin-bottom: 15rpx;
    margin-top: 120rpx;
}
.toc-list {
    min-height: 120rpx!important;
    padding: 0 30rpx;
}
.toc-list-title {
    font-size: 32rpx;
    font-weight: 400;
}